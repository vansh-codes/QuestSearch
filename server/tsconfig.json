{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": ["src", "src/types"],
    "exclude": ["node_modules", "dist"]
}
