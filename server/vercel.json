{
    "version": 2,
    "name": "questsearch-api",
    "builds": [
        {
            "src": "dist/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "/api/health.ts",
            "methods": ["GET"]
        },
        {
            "src": "/api/search",
            "dest": "/api/search.ts",
            "methods": ["GET"]
        },
        {
            "src": "/api/(.*)",
            "dest": "dist/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "dist/404.html"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "@mongodb_uri"
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    }
}
