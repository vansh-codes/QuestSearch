{
    "version": 2,
    "name": "questsearch-api",
    "builds": [
        {
            "src": "dist/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "/api/health.ts",
            "methods": ["GET"]
        },
        {
            "src": "/api/search",
            "dest": "/api/search.ts"
        },
        {
            "src": "/api/(.*)",
            "dest": "dist/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "dist/404.html"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "@mongodb_uri"
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,POST"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
                }
            ]
        }
    ]
}
